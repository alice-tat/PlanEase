<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_medium">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/taskEditButton"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/taskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/2/2025"
            android:textColor="@color/grey_dark"/>

        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task name here"
            android:textSize="@dimen/h4_text_size"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/taskEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pencil"
        android:backgroundTint="@color/primary_blue"
        android:layout_toLeftOf="@+id/taskDeleteButton"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/taskDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close"
        android:backgroundTint="@color/primary_red"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>